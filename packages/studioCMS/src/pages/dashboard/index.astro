---
// import sitemap from 'sitemap-ext:config';
import Default from '../../layouts/Default.astro';
import { rankCheck } from '../../utils/rankcheck';
import type { Locals } from './locals';

// sitemap(false); // opt-out

const locals = Astro.locals as Locals;
const isLoggedIn = locals.isLoggedIn;

function redirectToPath(path: string) {
	return Astro.redirect(import.meta.env.BASE_URL + path);
}

if (!isLoggedIn) {
	redirectToPath('dashboard/login');
}

const getUserName = () => {
	if (locals.isLoggedIn) {
		if (locals.dbUser.name) {
			return locals.dbUser.name;
		}
		return locals.user.username;
	}
	return 'Astronaut';
};

const currentUserRank = await rankCheck(locals);

if (currentUserRank !== 'admin' && currentUserRank !== 'editor') {
	console.log('User is not an admin or editor. Redirecting to profile page.');
	redirectToPath('dashboard/profile');
}
---

<Default>
        <div class="dash">
            <form method="post" action={`/dashboard/logout`}>
                <button>Logout</button>
            </form>
            <center>
                <h1>Dashboard</h1>
            </center>
            <div>
                <p class="font-small">
                Currently logged in user: <bold>{getUserName}</bold> | <a href={`/dashboard/profile`}>More info...</a>
                </p>

                { currentUserRank === "editor" && (
                    <a href={`/dashboard/new-post`}><button class="btn">Create a new post</button></a>

                    <a href={`/dashboard/post-list`}><button class="btn-edit">Edit Posts</button></a>
                )}

                { currentUserRank === "admin" && (
                    <a href={`$/dashboard/new-post`}><button class="btn">Create a new post</button></a>

                    <a href={`/dashboard/post-list`}><button class="btn-edit">Edit Posts</button></a>

                    <a href={`/dashboard/edit/home`}><button class="btn-edit">Edit Home Page</button></a>
            
                    <a href={`/dashboard/edit/about`}><button class="btn-edit">Edit About Page</button></a>
            
                    <a href={`/dashboard/site-config`}><button class="btn-edit">Edit Site Configuration</button></a>
            
                    <a href={`/dashboard/admin-config`}><button class="btn-edit">Edit Admins</button></a>
                )}

            </div>
        </div>
</Default>

